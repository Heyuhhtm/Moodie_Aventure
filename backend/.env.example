# DilJourney Environment Variables
# Copy this file to .env and fill in your values

# MongoDB Connection String (from MongoDB Atlas)
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/diljourney?retryWrites=true&w=majority

# JWT Secret (generate a secure random string, e.g., use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET=your-super-secret-jwt-key-here

# JWT Token Expiration (default: 7d)
JWT_EXPIRES_IN=7d

# Server Port (default: 5000)
PORT=5000

# Client URL (your frontend URL for CORS in production)
CLIENT_URL=https://your-frontend.onrender.com

# Node Environment
NODE_ENV=production
